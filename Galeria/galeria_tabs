<script>
// Tabs toggle
document.querySelectorAll('.tab').forEach(btn => {
  btn.addEventListener('click', () => {
    document.querySelectorAll('.tab').forEach(b => b.classList.remove('is-active'));
    btn.classList.add('is-active');
    document.querySelectorAll('.tab-pane').forEach(p => p.hidden = true);
    const target = btn.getAttribute('data-target');
    const pane = document.querySelector(target);
    if (pane) pane.hidden = false;
  });
});

// Lightbox logic
(function(){
  const lb = document.getElementById('mediaLightbox');
  const lbContent = lb.querySelector('.lightbox-content');
  const lbClose = document.getElementById('lbClose');

  // Función para cerrar
  function closeLB(){
    // Pausar video si hay uno
    const vid = lbContent.querySelector('video');
    if(vid){
      vid.pause();
      vid.removeAttribute('src');
      vid.load();
    }
    // Eliminar contenido dinámico
    lbContent.querySelectorAll('img, video').forEach(el => el.remove());
    lb.hidden = true;
  }

  // Click sobre figura de imagen
  document.getElementById('galGrid').addEventListener('click', e=>{
    const fig = e.target.closest('.gal-item[data-full]');
    if (!fig) return;
    const full = fig.getAttribute('data-full');
    if (!full) return;

    // Crear imagen
    const img = document.createElement('img');
    img.src = full;
    img.alt = '';
    lbContent.appendChild(img);

    lb.hidden = false;
  });

  // Click sobre figura de video
  document.getElementById('vidGrid').addEventListener('click', async e=>{
    const fig = e.target.closest('.gal-item.video');
    if (!fig) return;
    const src = fig.getAttribute('data-video');
    if (!src) return;

    // Ocultar ícono play
    const icon = fig.querySelector('.play-icon');
    if(icon) icon.style.display = 'none';

    // Crear video
    const vid = document.createElement('video');
    vid.src = src;
    vid.controls = true;
    vid.playsInline = true;
    vid.autoplay = true;
    vid.muted = false;
    vid.currentTime = 0;

    // Asegurar que pueda reproducir
    vid.addEventListener('loadedmetadata', ()=>{
      // restringir tamaño si es muy grande
      if(vid.videoHeight > vid.videoWidth){
        vid.style.maxHeight = '90vh';
      } else {
        vid.style.maxWidth = '90vw';
      }
    });

    lbContent.appendChild(vid);
    lb.hidden = false;

    try { await vid.play(); }
    catch(err){ console.warn('Play falló:', err); }
  });

  // Cerrar lightbox al botón
  lbClose.addEventListener('click', closeLB);
  // Cerrar al hacer clic fuera del contenido
  lb.addEventListener('click', e => {
    if (e.target === lb || e.target === lb.querySelector('.lightbox-backdrop')){
      closeLB();
    }
  });
  // Cerrar con Escape
  document.addEventListener('keydown', e=>{
    if(e.key === 'Escape' && !lb.hidden){
      closeLB();
    }
  });
})();
</script>

